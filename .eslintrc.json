{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-use-before-define": ["off"],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "max-len": ["error", { "code": 180 }],
        "no-restricted-syntax": ["warn"],
        "no-await-in-loop": ["warn"],
        "import/export": ["warn"]
    }
}
